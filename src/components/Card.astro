---
const { heading, hours, lastweek, color, icon } = Astro.props;
---

<div class="card">
  <div class={`top_container ${color}`}>
    <div class="icon_wrapper"><img class="top_icon" src={icon} /></div>
  </div>
  <div class="wrapper">
    <div class="first_column">
      <div class="heading">{heading}</div>
      <div class="hours">{hours}</div>
    </div>
    <div class="second_column">
      <img
        class="ellipsis"
        src="./src/assets/icon-ellipsis.svg"
        alt="elipsis icon"
      />
      <div class="last_week">{lastweek}</div>
    </div>
  </div>
</div>

<style>
  .card {
    position: relative;
  }
  .wrapper {
    margin-block: 20px;
    display: flex;
    justify-content: space-around;
    align-items: center;
    width: 350px;
    height: 130px;
    position: relative;
    border-radius: 20px;
    background-color: hsl(235, 46%, 20%);
    z-index: 1;
    color: white;
  }

  .first_column {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .second_column {
    display: flex;
    flex-direction: column;
    gap: 25px;
    align-items: flex-end;
  }

  .top_container {
    border-radius: 20px 20px 0 0;
    background-color: orange;
    height: 60px;
    width: 350px;
    position: absolute;
    top: -25px;
  }

  /* Top container background color & Icon */

  .icon_wrapper {
    position: relative;
    overflow: hidden;
    height: 50px;
  }
  .top_icon {
    height: 60px;
    position: absolute;
    height: 70px;
    top: -10px;
    right: 30px;
  }
  .light_red_work {
    background-color: hsl(15, 100%, 70%);
  }

  .soft_blue_play {
    background-color: hsl(195, 74%, 62%);
  }

  .light_red_study {
    background-color: hsl(348, 100%, 68%);
  }

  .lime_green_excercise {
    background-color: hsl(145, 58%, 55%);
  }

  .violet_social {
    background-color: hsl(264, 64%, 52%);
  }

  .soft_orange_selfcare {
    background-color: hsl(43, 84%, 65%);
  }

  /* Typography */

  .heading {
    font-size: 1rem;
    font-weight: 600;
  }
  .hours {
    font-size: 2rem;
    font-weight: 500;
  }

  .ellipsis {
    width: 20px;
  }

  .last_week {
    font-size: 0.8rem;
    color: hsl(236, 100%, 87%);
  }
</style>
