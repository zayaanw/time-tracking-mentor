---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Frontend Mentor | Time tracking dashboard">
  <main>
    <Card
      color="light_red"
      heading="Work"
      hours="32hrs"
      lastweek="Last week - 36 hours"
    />
    <Card heading="Play" hours="32hrs" lastweek="Last week - 36 hours" />
    <Card heading="Study" hours="10hrs" lastweek="Last week - 36 hours" />
    <Card heading="Excercise" hours="4hrs" lastweek="Last week - 36 hours" />
    <Card heading="Social" hours="4hrs" lastweek="Last week - 36 hours" />
    <Card heading="Self Care" hours="5hrs" lastweek="Last week - 36 hours" />
  </main>
</Layout>

<style>
  main {
    margin-top: 50px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 50px;
  }

  .red {
    background-color: red;
  }
</style>
