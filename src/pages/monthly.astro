---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Profile from "../components/Profile.astro";
---

<Layout title="Time tracking dashboard | Monthly">
  <main>
    <Profile MonthlySelected />
    <Card
      color="light_red_work"
      icon="./src/assets/icon-work.svg"
      heading="Work"
      hours="103hrs"
      lastweek="Last Month - 128 hours"
    />
    <Card
      color="soft_blue_play"
      icon="./src/assets/icon-play.svg"
      heading="Play"
      hours="23hrs"
      lastweek="Last Month - 29 hours"
    />
    <Card
      color="light_red_study"
      icon="./src/assets/icon-study.svg"
      heading="Study"
      hours="13hrs"
      lastweek="Last Month - 19 hours"
    />
    <Card
      color="lime_green_excercise"
      icon="./src/assets/icon-exercise.svg"
      heading="Excercise"
      hours="11hr"
      lastweek="Last Month - 18 hours"
    />
    <Card
      color="violet_social"
      icon="./src/assets/icon-social.svg"
      heading="Social"
      hours="21hrs"
      lastweek="Last Month - 23 hours"
    />
    <Card
      color="soft_orange_selfcare"
      icon="./src/assets/icon-self-care.svg"
      heading="Self Care"
      hours="7hrs"
      lastweek="Last Month - 11 hours"
    />
  </main>
</Layout>

<style>
  main {
    margin-top: 50px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
  }
</style>
